<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="3dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/txtYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="year"
            android:textSize="24sp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline4"
            card_view:layout_constraintStart_toEndOf="@+id/txtMonth"
            card_view:layout_constraintTop_toTopOf="@+id/guideline4" />

        <TextView
            android:id="@+id/txtMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="month"
            android:textSize="24sp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline4"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/guideline4" />

        <TextView
            android:id="@+id/txtConsume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="consume"
            android:textSize="24sp"
            card_view:layout_constraintBottom_toTopOf="@+id/guideline4"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/guideline4" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            card_view:layout_constraintGuide_percent="0.65" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MÃªs"
            card_view:layout_constraintBottom_toTopOf="@+id/txtMonth"
            card_view:layout_constraintStart_toStartOf="@+id/txtMonth" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ano"
            card_view:layout_constraintBottom_toTopOf="@+id/txtYear"
            card_view:layout_constraintStart_toStartOf="@+id/txtYear" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor"
            card_view:layout_constraintBottom_toTopOf="@+id/txtConsume"
            card_view:layout_constraintStart_toStartOf="@+id/txtConsume" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
